<!DOCTYPE html>
<html lang="en">
<head>
    <title>Cloud Land</title>
    <script src="https://code.jquery.com/jquery-3.1.1.js"></script>
    <script src="jquery.json-viewer.js"></script>
    <link rel='stylesheet' href='stylesheets/token.css'/>
    <link href="stylesheets/jquery.json-viewer.css" type="text/css" rel="stylesheet" />
</head>
<body>
<div class="main-container">
    <pre id="json-renderer"></pre>
    <div class="top-container">
        <div class="flex-top">
            <a href="/logout"><img class="back-icon" src="images/back.png"></a>
        </div>
        <div class="flex-top">
            <a href="/logout"><p>Back</p></a>
        </div>
    </div>
    <div id="datadiv" class="bottom-container">
        <div class="flex-bottom">
            <h1>Access Token Payload</h1>
            <div id="accessTokenAttributes" class="token-info"></div>
        </div>
        <div class="flex-bottom">
            <h1>ID Token Payload</h1>
            <div id="idTokenAttributes" class="token-info"></div>
        </div>
        <div class="flex-bottom">
            <h1>User Info</h1>
            <div id="userInfo" class="token-info"></div>
        </div>
    </div>
</div>


<script>
	var tokens = JSON.parse('<%- tokens %>');
	$("#datadiv").attr('style', 'visibility: visible');
	$('#accessTokenAttributes').jsonViewer(tokens.accessTokenPayload, {collapsed: true});
	$('#idTokenAttributes').jsonViewer(tokens.identityTokenPayload, {collapsed: true});
	$('#userInfo').jsonViewer(tokens.userInfo, {collapsed: true});
</script>
</body>
</html>
